{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Warning",
      "ApiGateway": "Information"
    }
  },
  "Security": {
    "Cors": {
      "AllowedOrigins": [
        "https://georgiatech-library.com",
        "https://www.georgiatech-library.com"
      ],
      "AllowCredentials": true,
      "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
      "AllowedHeaders": [ "*" ]
    },
    "RateLimit": {
      "Enabled": true,
      "GeneralLimit": 200,
      "GeneralPeriodInSeconds": 60,
      "EndpointLimits": {
        "/auth/login": {
          "Limit": 10,
          "PeriodInSeconds": 60
        },
        "/auth/register": {
          "Limit": 5,
          "PeriodInSeconds": 3600
        }
      }
    },
    "Jwt": {
      "AuthServiceUrl": "http://authservice:8080",
      "ValidationCacheDurationMinutes": 10
    }
  }
}

