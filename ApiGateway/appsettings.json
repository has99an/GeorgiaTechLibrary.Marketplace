{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "Cors": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:3001"
      ],
      "AllowCredentials": true,
      "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ],
      "AllowedHeaders": [ "*" ]
    },
    "RateLimit": {
      "Enabled": true,
      "GeneralLimit": 500,
      "GeneralPeriodInSeconds": 60,
      "EndpointLimits": {
        "/auth/login": {
          "Limit": 5,
          "PeriodInSeconds": 60
        },
        "/auth/register": {
          "Limit": 3,
          "PeriodInSeconds": 3600
        }
      }
    },
    "Jwt": {
      "AuthServiceUrl": "http://authservice:8080",
      "ValidationCacheDurationMinutes": 5
    }
  },
  "AuthService": {
    "Url": "http://authservice:8080"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "books-route": {
        "ClusterId": "books-cluster",
        "Match": {
          "Path": "/books/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/books" },
          { "PathPrefix": "/api/books" }
        ]
      },
      "warehouse-route": {
        "ClusterId": "warehouse-cluster",
        "Match": {
          "Path": "/warehouse/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/warehouse" },
          { "PathPrefix": "/api/warehouse" }
        ]
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/search/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/search" },
          { "PathPrefix": "/api/search" }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" },
          { "PathPrefix": "/api/orders" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/users" },
          { "PathPrefix": "/api/users" }
        ]
      },
      "cart-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/cart" },
          { "PathPrefix": "/api/shoppingcart" }
        ],
        "Forwarded": {
          "RequestHeaders": "All"
        }
      },
      "notifications-route": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/notifications" },
          { "PathPrefix": "/api/notifications" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "books-cluster": {
        "Destinations": {
          "books-destination": {
            "Address": "http://bookservice:8080"
          }
        }
      },
      "warehouse-cluster": {
        "Destinations": {
          "warehouse-destination": {
            "Address": "http://warehouseservice:8080"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "search-destination": {
            "Address": "http://searchservice:8080"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-destination": {
            "Address": "http://orderservice:8080"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "users-destination": {
            "Address": "http://userservice:8080"
          }
        }
      },
      "notifications-cluster": {
        "Destinations": {
          "notifications-destination": {
            "Address": "http://notificationservice:8080"
          }
        }
      }
    }
  }
}
