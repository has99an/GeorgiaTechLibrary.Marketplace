{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AuthService": {
    "Url": "http://authservice:8080"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" }
        ]
      },
      "books-route": {
        "ClusterId": "books-cluster",
        "Match": {
          "Path": "/books/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/books" }
        ]
      },
      "warehouse-route": {
        "ClusterId": "warehouse-cluster",
        "Match": {
          "Path": "/warehouse/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/warehouse" }
        ]
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/search/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/search" }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "books-cluster": {
        "Destinations": {
          "books-destination": {
            "Address": "http://bookservice:8080"
          }
        }
      },
      "warehouse-cluster": {
        "Destinations": {
          "warehouse-destination": {
            "Address": "http://warehouseservice:8080"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "search-destination": {
            "Address": "http://searchservice:8080"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-destination": {
            "Address": "http://orderservice:8080"
          }
        }
      }
    }
  }
}
