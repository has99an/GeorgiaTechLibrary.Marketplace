{
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "books-route": {
        "ClusterId": "books-cluster", 
        "Match": {
          "Path": "/books/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "warehouse-route": {
        "ClusterId": "warehouse-cluster",
        "Match": {
          "Path": "/warehouse/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/search/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authservice:8080/"
          }
        }
      },
      "books-cluster": {
        "Destinations": {
          "books-destination": {
            "Address": "http://bookservice:8080/"
          }
        }
      },
      "warehouse-cluster": {
        "Destinations": {
          "warehouse-destination": {
            "Address": "http://warehouseservice:8080/"
          }
        }
      },
      "search-cluster": {
        "Destinations": {
          "search-destination": {
            "Address": "http://searchservice:8080/"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "orders-destination": {
            "Address": "http://orderservice:8080/"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "users-destination": {
            "Address": "http://userservice:8080/"
          }
        }
      }
    }
  },
  "JwtAuthentication": {
    "AuthServiceUrl": "http://authservice:8080/api/auth/validate"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}